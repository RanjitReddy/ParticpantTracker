<h1> Create Registry </h1>
<% if @registry.errors.any? %>
  <h2 style='color: red'> Hang On! There Was an Error with this registry from being saved: </h2>
  <ul>
  <% @registry.errors.full_messages.each do |error| %>
    <li style='color: red'><%= error %></li>
  <% end %>
</ul>
<% end %>
<%= form_for(@registry) do |f| %>
  <%= f.label :name %><br/>
  <%= f.text_field :name %><br/><br/>
  <%= f.label :location %><br/>
  <%= f.text_field :location %><br/><br/>
  <%= f.fields_for(@registry_coordinator) do |r| %>
    <%= r.label 'Coordinator:' %><br/>
    <%= r.collection_select :coordinator_id, Coordinator.all, :id, :name, prompt: true %><br/><br/>
  <%= f.submit %>
<% end %>
<% end %>